        width: '50%'
    },

    items: [{
            xtype: 'datefield',
            fieldLabel: 'Release Year ',
            name: 'releaseYear',
      		flex:1,
			style: 'text-align: left; margin-left: 210px;',
        }, {
            fieldLabel: 'Language',
            name: 'dirName',
      		flex:1,
