// Method 2 for Rendering

var something = Ext.create('Ext.panel.Panel', {    // Storing the Component in a Function
    	title: 'Hello',
    	width: 200,
    	html: '<p>World!</p>',
	});

Ext.onReady(function() {
	something.render(Ext.getBody());
});


