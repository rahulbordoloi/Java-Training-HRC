<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.highradius.javaTraining.model.FilmPojo" table="film">

		<meta attribute="class-description">
			Film Table from Sakila Schema.
		</meta>

		<id name="film_id" type="java.lang.Integer" column="film_id">
			<generator class="identity" />
		</id>

	    <property name="title" column="title" type="java.lang.String" />
	                
	    <property name="description" column="description" type="java.lang.String" />
	                
	    <property name="release_year" column="release_year" type="java.lang.Long" />
	                
	    <many-to-one name="LanguageName" class="com.highradius.javaTraining.model.LanguagePojo">
			<column name="language_id" not-null="true"  />
	    </many-to-one>
	
	    <many-to-one name="origiLanguageName" class="com.highradius.javaTraining.model.LanguagePojo">
			<column name="original_language_id"></column>
		</many-to-one>
	
	    <property name="rental_duration" column="rental_duration" type="java.lang.Integer" />
	
	    <property name="rental_rate" column="rental_rate" type="java.lang.Float" />
	
	    <property name="length" column="length" type="java.lang.Long" />
	
	    <property name="replacement_cost" column="replacement_cost" type="java.lang.Double" />
	    
		<property name="rating" column="rating" type="java.lang.String" />
		           
		<property name="special_features" column="special_features" type="java.lang.String" />
		             
		<property name="last_update" column="last_update" type="java.sql.Date" />
	
	    <property name="director" column="director" type="java.lang.String" />
		
	</class>
	
</hibernate-mapping>